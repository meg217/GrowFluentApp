<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="LessonsActivity" />

    <Button
        android:id="@+id/Lesson1_button"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:text="@string/Lesson1_button" />

    <Button
        android:id="@+id/Lesson2_button"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:text="@string/Lesson2_button" />

    <Button
        android:id="@+id/Lesson3_button"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:text="@string/Lesson3_button" />

</LinearLayout>

